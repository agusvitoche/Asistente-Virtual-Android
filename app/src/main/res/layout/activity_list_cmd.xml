<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gus.proyectofinandroid.cmds.ListCmdActivity">

    <ExpandableListView
        android:id="@+id/listCmd"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/menu_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/listCmd"
        android:layout_alignEnd="@+id/listCmd"
        android:layout_alignRight="@+id/listCmd"
        android:layout_gravity="end|bottom"
        app:fab_labelStyle="@style/etiquetas"
        fab:fab_addButtonColorNormal="?attr/colorPrimary"
        fab:fab_addButtonSize="normal"
        fab:fab_labelsPosition="left">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/submenu_ocr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorPrimaryDark"
            fab:fab_icon="@drawable/camera"
            fab:fab_size="mini"
            fab:fab_title="OCR" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/submenu_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="?attr/colorPrimaryDark"
            fab:fab_icon="@drawable/cmd_chat"
            fab:fab_size="mini"
            fab:fab_title="CHAT" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>
</RelativeLayout>
